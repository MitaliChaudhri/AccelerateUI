<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" 	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
		
		xmlns:layout="sap.ui.layout" xmlns:c="sap.ui.core"  xmlns:m="sap.m">
   <Dialog title ="Add Training Verification">
		<f:SimpleForm
			editable="true"
			layout="ResponsiveGridLayout"
			labelSpanXL="4"
			labelSpanL="4"
			labelSpanM="12"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="0"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="2"
			columnsL="2"
			columnsM="2"
			singleContainerFullSize="false" >
			<f:content>
				<core:Title text="" />
				<Label text="Training Name" />
			<ComboBox></ComboBox>
				<core:Title text="" />
				<Label text="Training Mode" />
			<ComboBox></ComboBox>
			</f:content>
		</f:SimpleForm>
		 <beginButton>
            <Button text="Save" press="onSaveTrain" type="Accept"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancelTrain" type="Reject"/>
        </endButton>
   </Dialog>
</core:FragmentDefinition>